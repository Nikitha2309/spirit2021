<!DOCTYPE html>
<html>
	<head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Spirit 2021 | Treasure Hunt</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
	
	<body>
		<form id="get_answer">
		  <label for="answer">Answer:</label>
		  <input type="text" id="answer" name="answer" required><br>
		  <input type="submit" value="Submit">
		</form>
		
		<p id="text">
		</p>
		
		<script>
			const form = document.getElementById('get_answer')
			form.addEventListener('submit', checkAnswer)
			async function checkAnswer(event) {
				event.preventDefault()
				const answer = document.getElementById('answer').value
				const result = await fetch('/treasurehunt/check_answer/', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
						answer
					})
				}).then((res) => res.json())
				if (result.status === 'ok') {
					document.getElementById("text").innerHTML='Success!'
					window.location.replace('/hunt_submit_details');
				} else {
					document.getElementById("text").innerHTML=result.error
				}
			}
			
		</script>
	</body>
</html>